{% extends 'base.html.twig' %}

{% block title %}Profil | {{ parent() }}{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <h1 class="has-text-centered title is-2 mt-5">{{ foundParticipant.username }}</h1>



    <div class="columns">
        <div class="column is-1"></div>
        <div class="column is-5">
            <div class="card m-6">
                <div class="card-image">
                    <figure class="image is-4by3">
                        {% if app.user.pictureFilename == "" %}
                            <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                        {% else %}
                            <img src="{{ asset('img/profile/' ~ app.user.pictureFilename ) }}" alt="Placeholder image">
                        {% endif %}
                    </figure>
                </div>
            </div>
        </div>

        <div class="column mt-3">
            <div class="column is-mobile field is-horizontal mb-2 mt-2">
                <div class="column is-2">
                    <p class="has-text-link has-text-weight-bold">Prénom: </p>
                </div>
                <div class="column">{{ foundParticipant.firstname }}
                </div>
            </div>

            <div class="column is-mobile field is-horizontal mb-2 mt-2">
                <div class="column is-2">
                    <p class="has-text-link has-text-weight-bold">Nom: </p>
                </div>
                <div class="column">{{ foundParticipant.name }}
                </div>
            </div>

            <div class="column is-mobile field is-horizontal mb-1 mt-1">
                <div class="column is-2">
                    <p class="has-text-link has-text-weight-bold">Téléphone: </p>
                </div>
                <div class="column">{{ foundParticipant.phone }}
                </div>
            </div>

            <div class="column is-mobile field is-horizontal mb-1 mt-1">
                <div class="column is-2">
                    <p class="has-text-link has-text-weight-bold">Email: </p>
                </div>
                <div class="column">{{ foundParticipant.email }}
                </div>
            </div>

            <div class="column is-mobile field is-horizontal mb-1 mt-1">
                <div class="column is-2">
                    <p class="has-text-link has-text-weight-bold">Campus </p>
                </div>
                <div class="column">{{ foundParticipant.campus.name|upper }}
                </div>
            </div>
            <div class="section columns">
                <div class="column is-2"></div>
            <a class="button is-medium is-link is-light" href="{{ path('details',{'id':event.id}) }}">Retour</a>
            </div>

        </div>
    </div>

{% endblock %}
