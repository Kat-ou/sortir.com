{% extends 'base.html.twig' %}

{% block title %}Profil | {{ parent() }}{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1 class="title is-2 mt-5">Modifier un utilisateur</h1>

    <div class="columns">
        <div class="column is-1"></div>
        <div class="column is-4">
            <div class="card m-6">
                <div class="card-image">
                    <figure class="image is-4by3">
                        {% if participant.pictureFilename == "" %}
                            <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                        {% else %}
                            <img src="{{ asset('img/profile/' ~ participant.pictureFilename ) }}"
                                 alt="Placeholder image">
                        {% endif %}
                    </figure>
                </div>
            </div>
        </div>
        <div class="column is-6 ml-2">

            <div class="columns is-mobile mt-3">
                <div class="column is-3 has-text-link has-text-weight-bold">
                    Id:
                </div>
                <div class="column is-8">
                    {{ participant.id }}
                </div>
            </div>
            {{ form_start(form) }}

            <div class="columns is-mobile mt-3">
                <div class="column is-3">
                    {{ form_label(form.username, null, {'attr': {'class': 'has-text-link'} }) }}
                </div>
                <div class="column is-8">
                    {{ form_widget(form.username, {'attr': {'class': 'input is-primary'}}) }}
                </div>
            </div>

            <div class="columns is-mobile">
                <div class="column is-3">
                    {{ form_label(form.firstname, null, {'attr': {'class': 'has-text-link'} }) }}
                </div>
                <div class="column is-8">
                    {{ form_widget(form.firstname, {'attr': {'class': 'input is-primary'}}) }}
                </div>
            </div>

            <div class="columns is-mobile">
                <div class="column is-3">
                    {{ form_label(form.name, null, {'attr': {'class': 'has-text-link'} }) }}
                </div>
                <div class="column is-8">
                    {{ form_widget(form.name, {'attr': {'class': 'input is-primary'}}) }}
                </div>
            </div>

            <div class="columns is-mobile">
                <div class="column is-3">
                    {{ form_label(form.phone, null, {'attr': {'class': 'has-text-link'} }) }}
                </div>
                <div class="column is-8">
                    {{ form_widget(form.phone, {'attr': {'class': 'input is-primary'}}) }}
                </div>
            </div>

            <div class="columns is-mobile">
                <div class="column is-3">
                    {{ form_label(form.email, null, {'attr': {'class': 'has-text-link'} }) }}
                </div>
                <div class="column is-8">
                    {{ form_widget(form.email, {'attr': {'class': 'input is-primary'}}) }}
                </div>
            </div>

            <div class="columns is-mobile">
                <div class="column is-3">
                    {{ form_label(form.campus, null, {'attr': {'class': 'has-text-link'} }) }}
                </div>
                <div class="column">
                    {{ form_widget(form.campus, {'attr': {'class': 'input is-primary is-uppercase'}}) }}
                </div>
            </div>

            <div class="columns is-mobile">
                <div class="column is-3">
                    {{ form_label(form.roles, null, {'attr': {'class': 'has-text-link'} }) }}
                </div>
                <div class="column is-8">
                    {{ form_widget(form.roles, {'attr': {'class': 'input is-primary'}}) }}
                </div>
            </div>

            <div class="columns is-mobile">
                <div class="column is-3">
                    {{ form_label(form.isActive, null, {'attr': {'class': 'has-text-link'} }) }}
                </div>
                <div class="column is-8">
                    {{ form_widget(form.isActive, {'attr': {'class': 'input is-primary'}}) }}
                </div>
            </div>

            <div class="section columns">
                <div class="column"></div>
                <button type="submit" class="button is-medium is-link is-light is-3">Enregistrer</button>
                <div class="column"></div>
                <a class="button is-medium is-link is-light is-3" href="{{ path('admin_index') }}">Annuler</a>
                <div class="column"></div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
