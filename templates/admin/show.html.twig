{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <h1 class="title is-2 mt-5">Participant</h1>

    <table class="table mt-5">
        <tbody>
        <tr>
            <th>Id:</th>
            <td>{{ participant.id }}</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>{{ participant.email }}</td>
        </tr>
        <tr>
            <th>Roles:</th>
            <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Nom:</th>
            <td>{{ participant.name }}</td>
        </tr>

        <tr>
            <th>Prénom: </th>
            <td>{{ participant.firstname }}</td>
        </tr>
        <tr>
            <th>Pseudo: </th>
            <td>{{ participant.username }}</td>
        </tr>
        <tr>
            <th>Tél: </th>
            <td>{{ participant.phone }}</td>
        </tr>
        <tr>
            <th>Compte Actif: </th>
            <td>{{ participant.isActive ? 'Oui' : 'Non' }}</td>
        </tr>
        <tr>
            <th>Date de création: </th>
            <td>{{ participant.createdDate ? participant.createdDate|date('d-m-Y H:i') : '' }}</td>
        </tr>
        </tbody>
    </table>
    <div class="section columns">
        <a class="button is-medium is-link is-light" href="{{ path('admin_index') }}">Annuler</a>
        <div class="column is-1"></div>
        <a class="button is-medium is-link is-light"
           href="{{ path('admin_edit', {'id': participant.id}) }}">Modifier</a>
        <div class="column is-1"></div>
        <form method="post" action="{{ path('admin_delete', {'id': participant.id}) }}"
              onsubmit="return confirm('Etes-vous sûr de vouloir supprimer ce compte ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participant.id) }}">
            <button class="button is-medium is-link is-light">Supprimer</button>
        </form>
    </div>
{% endblock %}
